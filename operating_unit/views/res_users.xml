<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_users_form" model="ir.ui.view">
      <field name="name">res.users.form</field>
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@string='Access Rights']" position="after">
          <page string="Operating Units" groups="operating_unit.group_multi_operating_unit">
            <group string="Allowed Operating Units">
              <field name="default_operating_unit_id"/>
              <field name="operating_unit_ids"/>
            </group>
          </page>
        </xpath>
      </field>
    </record>

  </data>
</openerp>
