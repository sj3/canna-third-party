<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_partner_form" model="ir.ui.view">
      <field name="name">res.partner.form.ou</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <field name="website" position="after">
          <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
        </field>
        <xpath expr="//page[@string='Contacts']//form[@string='Contact']//field[@name='mobile']" position="after">
          <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit" readonly="1" invisible="1"/>
        </xpath>        
      </field>
    </record>

  </data>
</openerp>
