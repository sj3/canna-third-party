<?xml version="1.0"?>
<odoo>

  <record id="price_catalog_version_view_search" model="ir.ui.view">
    <field name="name">price.catalog.version.search</field>
    <field name="model">price.catalog.version</field>
    <field name="inherit_id" ref="price_catalog.price_catalog_version_view_search"/>
    <field name="arch" type="xml">
      <field name="name" position="after">
        <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
      </field>
    </field>
  </record>

  <record id="price_catalog_version_view_tree" model="ir.ui.view">
    <field name="name">price.catalog.version.tree</field>
    <field name="model">price.catalog.version</field>
    <field name="inherit_id" ref="price_catalog.price_catalog_version_view_tree"/>
    <field name="arch" type="xml">
      <field name="catalog_id" position="after">
        <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"/>
      </field>
    </field>
  </record>

  <record id="price_catalog_version_view_form" model="ir.ui.view">
    <field name="name">price.catalog.version.form</field>
    <field name="model">price.catalog.version</field>
    <field name="inherit_id"
      ref="price_catalog.price_catalog_version_view_form"/>
    <field name="arch" type="xml">
      <field name="catalog_id" position="after">
        <field name="operating_unit_id" groups="operating_unit.group_multi_operating_unit"
          options="{'no_create': True}"/>
      </field>
    </field>
  </record>

</odoo>

