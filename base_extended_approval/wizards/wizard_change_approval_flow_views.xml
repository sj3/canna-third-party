<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="wizard_change_approval_flow_view_form" model="ir.ui.view">
    <field name="name">Change approval flow</field>
    <field name="model">wizard.change.approval.flow</field>
    <field name="arch" type="xml">
      <form>
          <group>
              <field name="ref_model" readonly="1"/>
              <field name="approval_flow_id"/>
        </group>
        <footer>
          <button name="do_change_approval_flow" string="Change"
                  type="object" default_focus="1"
                   class="oe_highlight"/>
          or
          <button string="Cancel" class="oe_link" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="wizard_change_approval_flow_action" model="ir.actions.act_window">
    <field name="name">Change approval flow</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">wizard.change.approval.flow</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="wizard_change_approval_flow_view_form"/>
    <field name="target">new</field>
  </record>
  
</odoo>
