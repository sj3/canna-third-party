<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <menuitem id="ir_module_module_menu_info" name="Module Info"
          parent="base.menu_reporting"
          sequence="1000"/>

    <record id="ir_module_module_tree_info" model="ir.ui.view">
      <field name="name">ir.module.module.tree.info</field>
      <field name="model">ir.module.module</field>
      <field name="arch" type="xml">
        <tree string="Modules" create="false" delete="false" edit="false">
          <field name="shortdesc"/>
          <field name="name"/>
          <field name="author" groups="base.group_no_one"/>
          <field name="installed_version"/>
          <field name="state" groups="base.group_no_one"/>
          <field name="category_id" groups="base.group_no_one"/>
        </tree>
      </field>
    </record>

    <record id="ir_module_module_action_installed" model="ir.actions.act_window">
      <field name="name">Installed Modules</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">ir.module.module</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('state', '=', 'installed')]</field>
      <field name="context">{'module_list_readonly': 1}</field>
      <field name="view_id" ref="ir_module_module_tree_info"/>
    </record>

    <menuitem id="ir_module_module_menu_info_installed" name="Module Info"
              action="ir_module_module_action_installed"
              parent="ir_module_module_menu_info"/>

  </data>
</openerp>
