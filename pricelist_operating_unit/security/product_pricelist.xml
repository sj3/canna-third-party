<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data noupdate="1">

    <record id="ir_rule_pricelist_allowed_operating_units" model="ir.rule">
      <field name="model_id" ref="product.model_product_pricelist"/>
      <field name="domain_force">['|', ('operating_unit_id', '=', False), , ('operating_unit_id', 'in', [ou.id for ou in user.operating_unit_ids])]</field>
      <field name="name">Pricelists from allowed operating units</field>
      <field name="global" eval="True"/>
      <field eval="0" name="perm_unlink"/>
      <field eval="0" name="perm_write"/>
      <field eval="1" name="perm_read"/>
      <field eval="0" name="perm_create"/>
    </record>

    <record id="ir_rule_pricelist_version_allowed_operating_units" model="ir.rule">
      <field name="model_id" ref="product.model_product_pricelist_version"/>
      <field name="domain_force">['|', ('operating_unit_id', '=', False), , ('operating_unit_id', 'in', [ou.id for ou in user.operating_unit_ids])]</field>
      <field name="name">Pricelist versions from allowed operating units</field>
      <field name="global" eval="True"/>
      <field eval="0" name="perm_unlink"/>
      <field eval="0" name="perm_write"/>
      <field eval="1" name="perm_read"/>
      <field eval="0" name="perm_create"/>
    </record>

  </data>
</openerp>
