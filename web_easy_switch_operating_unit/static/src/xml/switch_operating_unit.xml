<?xml version="1.0" encoding="UTF-8"?>
<template>

    <t t-name="web_easy_switch_operating_unit.SwitchOperatingUnitWidget">
        <ul class="nav navbar-nav navbar-right oe_user_menu_placeholder" style="margin-right:10px">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <span class="oe_topbar_name">
                        <img class="oe_topbar_avatar" t-att-src="widget.logo_topbar"/>
                        <t t-esc="widget.current_operating_unit_name"/>
                    </span>
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <t t-foreach="widget.operating_units" t-as="operating_unit">
                        <li>
                            <a class="easy_switch_operating_unit_operating_unit_item"
                               href="#"
                               t-att-data-operating-unit-id="operating_unit.id">
                                <img class="oe_topbar_avatar" t-att-src="operating_unit.logo_state"/>
                                <t t-esc="operating_unit.name"/>
                            </a>
                        </li>
                    </t>
                </ul>
            </li>
        </ul>
    </t>
</template>

