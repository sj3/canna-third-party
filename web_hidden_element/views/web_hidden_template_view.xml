<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>

    <record model="ir.ui.view" id="view_web_hidden_template_form">
      <field name="name">web.hidden.template.form</field>
      <field name="model">web.hidden.template</field>
      <field name="arch" type="xml">
        <form string="Hidden Template">
          <sheet>
            <group name="hidden-template-help">
              <p>
                Select a model and the fields/elements that you want to hide.<br/>
                You can hide the field/element to all users or all groups if you
                don't select any user or groups. If you want to hide to
                specific users or groups, select any user or group.
                The user is always more restrictive that groups.
              </p>
            </group>
            <group name="hidden-template-data">
              <field name="name"/>
              <field name="active"/>
              <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
              <field name="hidden_fields" context="{'template_id':parent.get('name')}">
                <tree string="Hidden Fields" editable="bottom">
                  <field name="sequence"/>
                  <field name="name" domain="[('model_id', '=', model)]"/>
                  <field name="hidden"/>
                  <field name="users" widget="many2many_tags"/>
                  <field name="groups" widget="many2many_tags"/>
                  <field name="model" invisible="1"/>
                  <field name="expression"/>
                  <field name="template_id" invisible="1"/>
                </tree>
              </field>
              <field name="hidden_elements" context="{'template_id':parent.get('name')}">
                <tree string="Hidden Elements" editable="bottom">
                  <field name="sequence"/>
                  <field name="name" domain="[('model_id', '=', model)]"/>
                  <field name="hidden"/>
                  <field name="users" widget="many2many_tags"/>
                  <field name="groups" widget="many2many_tags"/>
                  <field name="model" invisible="1"/>
                  <field name="expression"/>
                  <field name="template_id" invisible="1"/>
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_web_hidden_template_tree">
      <field name="name">web.hidden.template.tree</field>
      <field name="model">web.hidden.template</field>
      <field name="arch" type="xml">
        <tree string="Hidden Template">
          <field name="name"/>
          <field name="company_id" groups="base.group_multi_company"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_web_hidden_fields_form">
      <field name="name">Hidden Elements</field>
      <field name="res_model">web.hidden.template</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_web_hidden_template_tree"/>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a template with the model and hidden elements.
        </p>
      </field>
    </record>

    <menuitem
        id="menu_hidden_elements"
        action="action_web_hidden_fields_form"
        parent="base.menu_security"/>

  </data>
</openerp>
